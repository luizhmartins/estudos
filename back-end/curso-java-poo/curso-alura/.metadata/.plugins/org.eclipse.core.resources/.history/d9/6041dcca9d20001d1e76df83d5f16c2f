package livraria;

public class Pessoa {

	private String nome;
	private int idade;
	private String sexo;
	
	public Pessoa(String nome, int idade, String sexo) {
		this.nome = nome;
		this.idade = idade;
		this.sexo = sexo;
	}
	
	public void fazerAniversario() {
		System.out.println("Parabéns, é seu aniversário!!!");
	}
	
	public String getNome() {
		return this.nome;
	}
}
